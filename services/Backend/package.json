{
    "name": "codename-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "build": "nest build --path tsconfig.build.json",
        "start": "node dist/main.js",
        "dev": "nest start --watch --debug=0.0.0.0:9229",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:generate": "npx tsx -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.2",
        "@fastify/static": "8.2.0",
        "@nestjs/common": "11.1.3",
        "@nestjs/config": "4.0.2",
        "@nestjs/core": "11.1.3",
        "@nestjs/jwt": "11.0.0",
        "@nestjs/microservices": "11.1.3",
        "@nestjs/passport": "11.0.5",
        "@nestjs/platform-fastify": "11.1.3",
        "@nestjs/schedule": "6.0.0",
        "@nestjs/swagger": "11.2.0",
        "@nestjs/throttler": "6.4.0",
        "@nestjs/typeorm": "11.0.0",
        "@sendgrid/mail": "^8.1.5",
        "arctic": "2.2.2",
        "argon2": "0.41.1",
        "bcrypt": "5.1.1",
        "class-transformer": "0.4.1",
        "class-validator": "npm:@nestjs/class-validator@0.13.4",
        "cron": "3.2.1",
        "dayjs": "1.11.13",
        "dotenv": "16.4.5",
        "kafkajs": "2.2.4",
        "nestjs-pino": "4.4.0",
        "nodemailer": "6.9.16",
        "otpauth": "9.4.0",
        "passport-jwt": "4.0.1",
        "pg": "8.13.1",
        "pino-pretty": "13.0.0",
        "reflect-metadata": "0.2.0",
        "rxjs": "7.8.1",
        "typeorm": "0.3.20",
        "typeorm-transactional": "0.5.0"
    },
    "devDependencies": {
        "@nestjs/cli": "11.0.7",
        "@nestjs/schematics": "11.0.5",
        "@nestjs/testing": "11.1.3",
        "@swc/cli": "^0.4.0",
        "@swc/core": "^1.9.2",
        "@types/bcrypt": "^5.0.2",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.16",
        "@types/passport-jwt": "^4.0.1",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.24.3",
        "@swc/core-linux-arm64-musl": "1.9.2",
        "@swc/core-linux-x64-gnu": "1.9.2",
        "@swc/core-linux-x64-musl": "1.9.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/$1"
        },
        "testRegex": ".*\\.test\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
